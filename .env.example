# HAVEN Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Backend Configuration
BACKEND_URL=https://haven-fastapi-backend.onrender.com
BACKEND_TIMEOUT=30
BACKEND_RETRY_ATTEMPTS=3

# OAuth Configuration
OAUTH_ENABLED=true
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=your_google_redirect_uri_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_REDIRECT_URI=your_facebook_redirect_uri_here

# Feature Flags
TRANSLATION_ENABLED=true
SIMPLIFICATION_ENABLED=true
FRAUD_DETECTION_ENABLED=true
ANALYTICS_ENABLED=true
NOTIFICATIONS_ENABLED=true

# UI Configuration
UI_THEME=light_green
DEFAULT_LANGUAGE=English
CURRENCY_SYMBOL=â‚¹
DATE_FORMAT=DD/MM/YYYY
ITEMS_PER_PAGE=10

# Security Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/tmp/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/haven_frontend.log

# Development Configuration
DEBUG=false
MOCK_API=false
SHOW_DEBUG_INFO=false

