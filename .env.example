# HAVEN Crowdfunding Frontend - Environment Configuration
# Copy this file to .env and fill in your actual values

# Backend Configuration
BACKEND_URL=http://localhost:8000
BACKEND_TIMEOUT=30

# Frontend Configuration
FRONTEND_URL=http://localhost:8501
APP_NAME=HAVEN Crowdfunding Platform
APP_VERSION=1.0.0

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
FACEBOOK_APP_ID=your-facebook-app-id

# Security Configuration
SECRET_KEY=your-frontend-secret-key-change-this-in-production
JWT_ALGORITHM=HS256

# Feature Flags
ENABLE_OAUTH=true
ENABLE_TRANSLATION=true
ENABLE_FRAUD_DETECTION=true

# UI Configuration
UI_THEME=light
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=INR

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_TTL=300

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-google-analytics-id
ENABLE_ANALYTICS=false

# Contact Information
SUPPORT_EMAIL=support@haven.org
SUPPORT_PHONE=+91-XXX-XXX-XXXX

# Social Media Links
TWITTER_URL=https://twitter.com/haven
FACEBOOK_URL=https://facebook.com/haven
LINKEDIN_URL=https://linkedin.com/company/haven

# Legal Links
TERMS_URL=https://haven.org/terms
PRIVACY_URL=https://haven.org/privacy
HELP_URL=https://haven.org/help

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

